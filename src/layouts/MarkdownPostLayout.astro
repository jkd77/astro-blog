---
import BaseLayout from './BaseLayout.astro';
const { frontmatter } = Astro.props;
---

<BaseLayout pageTitle={frontmatter.title}>
    <ul class="post-data">
        <li class="post-date">{frontmatter.pubDate.slice(0,10)}</li>
        <li class="post-description">{frontmatter.description}</li>
        <li class="post-author">Written by: <span class="post-author-name">{frontmatter.author}</span></li>
    </ul>
    <img src={frontmatter.image.url} width="300" alt={frontmatter.image.alt} />
    <slot />
</BaseLayout>